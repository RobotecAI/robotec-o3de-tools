#pragma once

uint hash(uint x) {
    x += (x << 10);
    x ^= (x >> 6);
    x += (x << 3);
    x ^= (x >> 11);
    x += (x << 15);
    return x;
}

float randomFloat(uint seed) {
    uint hashValue = hash(seed);
    return (hashValue & 0xfff) / 4096.0;
}

